<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cardview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/headlineImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:ignore="VectorDrawableCompat"
                />

<!--            <TextView-->
<!--                android:id="@+id/url"-->
<!--                android:layout_width="120dp"-->
<!--                android:layout_height="15dp"-->
<!--                android:text="TextView"-->
<!--                android:textSize="10dp"-->
<!--                android:background="@drawable/url_background"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/headlineImage"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/headlineImage"-->
<!--                app:layout_constraintHorizontal_bias="0.048"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="@+id/headlineImage"-->
<!--                app:layout_constraintVertical_bias="0.905" />-->

            <TextView
                android:id="@+id/date"
                android:layout_width="93dp"
                android:layout_height="33dp"
                android:background="@drawable/date_background"

                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:paddingLeft="2dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/headlineImage"
                app:layout_constraintEnd_toEndOf="@+id/headlineImage"
                app:layout_constraintTop_toTopOf="@+id/headlineImage"
                app:layout_constraintVertical_bias="0.905" />
<!--                android:text="TextView"-->

<!--                app:layout_constraintStart_toEndOf="@+id/url"-->


            <TextView
                android:id="@+id/hTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="TextView"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="24dp"
                tools:ignore="MissingConstraints"
                android:fontFamily="@font/g_bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="TextView"
                />
            <TextView
                android:id="@+id/newsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:text="TextView" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>